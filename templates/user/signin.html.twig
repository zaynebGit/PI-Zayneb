{% block title %}Sign In{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4">Sign In</h1>

                <form method="post">
                    {# {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %} #}

                    <div class="mb-3">
                        <label for="username" class="form-label" style="font-weight: bold;">Email Address</label>
                        <input type="email" id="username" name="_username" class="form-control" placeholder="Enter email" value="{{ last_username }}" required style="height: 45px; font-size: 16px;">
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label" style="font-weight: bold;">Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" required style="height: 45px; font-size: 16px;">
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary" style="width: 100%; padding: 12px; font-size: 18px;">Sign In</button>
                    </div>

                    <div class="mt-3 text-center">
                        <p>Don't have an account? <a href="{{ path('app_user_signup') }}" style="color: #007bff;">Sign Up</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
