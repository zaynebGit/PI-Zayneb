{% extends 'base2.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
    <div class="form-container">
        <div class="form-card">
            <h1 class="form-title">Create New User</h1>

            {{ include('user/_form.html.twig') }}

            <div class="back-link">
                <a href="{{ path('app_user_login') }}" class="back-button">Login</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .form-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f7fa;
        }

        .form-card {
            background-color: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
            margin-top: 20px;
        }

        .form-title {
            text-align: center;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }

        .back-button {
            color: #007bff;
            text-decoration: none;
            font-size: 16px;
        }

        .back-button:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}
