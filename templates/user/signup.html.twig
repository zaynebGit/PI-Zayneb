{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4">Sign Up</h1>

                <form method="post">
                    {{ form_start(form) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.fullName) }}
                        {{ form_widget(form.fullName, { 'attr': { 'class': 'form-control' } }) }}
                        <div class="form-text">Enter your full name</div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
                        <div class="form-text">Enter a valid email address</div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.password) }}
                        {{ form_widget(form.password, { 'attr': { 'class': 'form-control' } }) }}
                        <div class="form-text">Choose a strong password</div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.role) }}
                        {{ form_widget(form.role, { 'attr': { 'class': 'form-select' } }) }}
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Create Account</button>
                    </div>

                    {{ form_end(form) }}
                </form>

                <div class="mt-3 text-center">
                    <p>Already have an account? <a href="{{ path('app_user_signin') }}">Sign In</a></p>
                </div>
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 500px;
            padding-top: 50px;
        }

        .form-control, .form-select {
            height: 45px;
            font-size: 16px;
        }

        .btn {
            width: 100%;
            padding: 12px;
            font-size: 18px;
        }

        .form-text {
            font-size: 12px;
            color: #6c757d;
        }

        .text-center {
            text-align: center;
        }
    </style>
{% endblock %}
